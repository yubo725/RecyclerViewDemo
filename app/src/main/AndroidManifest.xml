<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.testrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="RecyclerViewDemo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NormalListViewActivity" android:label="普通ListView"/>
        <activity android:name=".HorizontalGridViewActivity" android:label="水平GridView" />
        <activity android:name=".VerticalGridViewActivity" android:label="垂直GridView" />
        <activity android:name=".WaterFallActivity" android:label="瀑布流"></activity>
    </application>

</manifest>